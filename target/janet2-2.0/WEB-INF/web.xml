<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>sessionFilter</filter-name>
        <filter-class>filters.sessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sessionFilter</filter-name>
        <url-pattern>/main/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sessionFilter</filter-name>
        <url-pattern>/home</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sessionFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>servlets.home.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Inventory</servlet-name>
        <servlet-class>servlets.main.inventory.Inventory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>servlets.main.products.Products</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Purchases</servlet-name>
        <servlet-class>servlets.main.purchases.Purchases</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sales</servlet-name>
        <servlet-class>servlets.main.sales.Sales</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Stores</servlet-name>
        <servlet-class>servlets.main.stores.Stores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Users</servlet-name>
        <servlet-class>servlets.main.users.Users</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchasesApi</servlet-name>
        <servlet-class>servlets.main.purchases.PurchasesApi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.login.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Providers</servlet-name>
        <servlet-class>servlets.main.providers.Providers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProvidersApi</servlet-name>
        <servlet-class>servlets.main.providers.ProvidersApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Inventory</servlet-name>
        <url-pattern>/main/inventory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/main/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Purchases</servlet-name>
        <url-pattern>/main/purchases</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sales</servlet-name>
        <url-pattern>/main/sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Stores</servlet-name>
        <url-pattern>/main/stores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/main/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchasesApi</servlet-name>
        <url-pattern>/main/purchasesApi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Providers</servlet-name>
        <url-pattern>/main/providers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProvidersApi</servlet-name>
        <url-pattern>/main/providersApi</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
